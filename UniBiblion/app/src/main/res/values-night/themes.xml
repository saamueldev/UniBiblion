<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base para o modo noturno com as cores definidas -->
    <style name="Theme.Unibiblion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias (pode ajustar para melhor contraste no escuro) -->
        <item name="colorPrimary">#BB86FC</item> <!-- Um roxo mais claro -->
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item> <!-- Preto, para texto sobre a cor primária -->

        <!-- Cores secundárias -->
        <item name="colorSecondary">#03DAC6</item> <!-- Teal -->
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item> <!-- Preto, para texto sobre a cor secundária -->

        <!--
            Cores de superfície e fundo são CRUCIAIS para o tema escuro.
            'colorSurface' é usado para componentes como Cards, Menus, etc.
            'colorOnSurface' é a cor do texto/ícones sobre esses componentes.
        -->
        <item name="colorSurface">#121212</item> <!-- Fundo padrão escuro do Material Design -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- Texto/ícones brancos -->

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <!-- Seu tema de Alto Contraste já está bem configurado para o modo noturno -->
    <style name="Theme.Unibiblion.AltoContraste" parent="Theme.Unibiblion">
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFFF00</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <!-- Seus outros estilos (ShapeAppearanceOverlay, OptionItemStyle, etc.) estão corretos,
         pois já usam atributos de tema como '?attr/colorOnSurface', o que é uma ótima prática! -->

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="OptionItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!-- Sugestão: Use uma cor com alfa baseada em 'colorOnSurface' para o divisor -->
        <item name="android:background">#22FFFFFF</item> <!-- Ex: Branco com ~13% de opacidade -->
    </style>

    <style name="SectionTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
