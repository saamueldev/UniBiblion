<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagem da Capa do Livro -->
        <ImageView
            android:id="@+id/img_capa_livro"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sommervile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Capa do livro" />

        <!-- Container de InformaÃ§Ãµes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_capa_livro"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TÃ­tulo do Livro -->
            <TextView
                android:id="@+id/tv_titulo_livro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo do Livro"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Nome do UsuÃ¡rio -->
            <TextView
                android:id="@+id/tv_nome_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ðŸ‘¤ Alugado por: Nome do UsuÃ¡rio"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Data de Retirada -->
            <TextView
                android:id="@+id/tv_data_retirada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ðŸ“… Retirada: 01/11/2025 Ã s 14:00"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- Data de DevoluÃ§Ã£o -->
            <TextView
                android:id="@+id/tv_data_devolucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ðŸ“… DevoluÃ§Ã£o: 15/11/2025"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- Status do Aluguel -->
            <TextView
                android:id="@+id/tv_status_aluguel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:minHeight="28dp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="ATIVO"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_button_purple"
                tools:text="ATRASADO" />

            <!-- Status Renovado -->
            <TextView
                android:id="@+id/tv_status_renovado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="ðŸ”„ Renovado"
                android:textColor="@color/roxo_institucional"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/rounded_edittext_background"
                tools:visibility="visible" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
