<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opções de Filtro e Ordenação"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar por:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <RadioGroup
        android:id="@+id/radio_group_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mais Recentes (Padrão)"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_highest_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maior Nota Primeiro"/>

        <RadioButton
            android:id="@+id/radio_lowest_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menor Nota Primeiro"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar Filtro"
        android:layout_marginTop="24dp"/>

</LinearLayout>