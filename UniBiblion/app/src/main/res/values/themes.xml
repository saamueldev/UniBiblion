<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. TEMA BASE CORRIGIDO: Adicionados os atributos de cor necessários -->
    <style name="Theme.Unibiblion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias da marca (sinta-se à vontade para alterar os valores) -->
        <item name="colorPrimary">#6200EE</item> <!-- Exemplo: Roxo -->
        <item name="colorPrimaryVariant">#3700B3</item> <!-- Exemplo: Roxo mais escuro -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Cor do texto sobre a cor primária -->

        <!-- Cores secundárias da marca -->
        <item name="colorSecondary">#03DAC6</item> <!-- Exemplo: Teal -->
        <item name="colorSecondaryVariant">#018786</item> <!-- Exemplo: Teal mais escuro -->
        <item name="colorOnSecondary">#000000</item> <!-- Cor do texto sobre a cor secundária -->

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 2. SEUS ESTILOS PERSONALIZADOS FORAM MANTIDOS INTACTOS -->

    <style name="Theme.Unibiblion.AltoContraste" parent="Theme.Unibiblion">
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#FFFF00</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="OptionItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Corrigido: Texto "Central" removido de dentro da tag de estilo -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#22000000</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
